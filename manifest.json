{
  "manifest_version": 2,
  "name": "Better Bookmarks and Sessions",
  "version": "1.2",
  "description": "Makes Firefox's built-in bookmarks better with improved UI and session management",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "menus"
  ],
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Better Bookmarks and Sessions",
    "default_popup": "popup/sessions-panel.html"
  }
}