{
  "manifest_version": 2,
  "name": "Better Bookmarks and Sessions",
  "version": "1.0",
  "description": "Makes Firefox's built-in bookmarks better with improved UI and session management",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "menus"
  ],
  "background": {
    "scripts": ["main.js", "background.js"],
    "persistant": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/bookmarks-modifier.js"],
      "css": ["content-scripts/bookmarks-modifier.css"]
    }
  ],
  "web_accessible_resources": [
    "panels/sessions-panel.html"
  ]
}