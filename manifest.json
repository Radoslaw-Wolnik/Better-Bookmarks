{
  "manifest_version": 2,
  "name": "Better Bookmarks and Sessions",
  "version": "1.2",
  "description": "Makes Firefox's built-in bookmarks better with improved UI and session management",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "menus"
  ],
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "sidebar_action": {
    "default_title": "Bookmarks & Sessions",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon48.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  },
  "chrome_url_overrides" : {
    "bookmarks": "custom-bookmarks.html"
  }
}