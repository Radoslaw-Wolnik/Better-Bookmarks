{
  "manifest_version": 2,
  "name": "Better Bookmarks plus Sessions",
  "version": "1.0",
  "description": "Better bookmarks with integrated sessions management, custom styling, and sidebar",
  "permissions": [
    "bookmarks",
    "tabs",
    "storage",
    "menus"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "about:blank?bookmarksManager"
      ],
      "css": ["content-scripts/bookmarks-modifier.css"],
      "js": ["content-scripts/bookmarks-modifier.js"]
    }
  ],
  "web_accessible_resources": [
    "icons/*",
    "sidebar/sidebar.html"
  ],
  "sidebar_action": {
    "default_title": "Bookmarks & Sessions",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": "icons/icon48.png"
  },
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+B"
      }
    }
  },
  "chrome_url_overrides" : {
    "bookmarks": "custom-bookmarks.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Better Bookmarks"
  }
}